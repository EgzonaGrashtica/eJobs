<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statisticsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StaticticsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_585sdp"
        android:layout_marginBottom="@dimen/_46sdp"
        android:background="@drawable/ic_background_statistics"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_background_statistics"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/arlrdbd"
                android:text="Statistikat e punësimit për vitin 2019"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_16ssp" />

            <com.anychart.AnyChartView
                android:id="@+id/pieChartView"
                android:layout_width="@dimen/_317sdp"
                android:layout_height="@dimen/_300sdp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp" />

            <com.anychart.AnyChartView
                android:id="@+id/columnChartView"
                android:layout_width="@dimen/_317sdp"
                android:layout_height="@dimen/_300sdp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="8dp"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="482dp">

            </com.anychart.AnyChartView>

            <com.anychart.AnyChartView
                android:id="@+id/column1ChartView"
                android:layout_width="@dimen/_317sdp"
                android:layout_height="@dimen/_300sdp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="8dp"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="482dp" />

            <com.anychart.AnyChartView
                android:id="@+id/differentChartView"
                android:layout_width="@dimen/_317sdp"
                android:layout_height="@dimen/_300sdp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="8dp"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="482dp" />

            <com.anychart.AnyChartView
                android:id="@+id/pie1ChartView"
                android:layout_width="@dimen/_317sdp"
                android:layout_height="@dimen/_300sdp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="8dp"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="482dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>