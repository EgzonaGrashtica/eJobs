<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fiek.ejobs">

    <uses-sdk tools:overrideLibrary="com.google.firebase.auth" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ejobs_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ejobs_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ResetPasswordActivity"
            android:theme="@style/NoActionBar"></activity>
        <activity android:name=".activities.AddPostsActivity"
            android:theme="@style/NoActionBar"></activity>
        <activity
            android:name=".activities.SignUpActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activities.LogInActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".activities.OnBoardingActivity"
            android:theme="@style/OnBoarding" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".activities.SplashScreen"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>